@model Cart
<div class="breadcrumb_background">
    <div class="title_full">
        <div class="container a-center">
            <h1 class="title_page">Giỏ hàng</h1>
        </div>
    </div>
</div>
<section class="bread-crumb">
    <span class="crumb-border"></span>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 a-left">
                <ul class="breadcrumb" itemscope itemtype="https://data-vocabulary.org/Breadcrumb">
                    <li class="home">
                        <a itemprop="url" href="index.html"><span itemprop="title">Trang chủ</span></a>
                        <span class="mr_lr">&nbsp;/&nbsp;</span>
                    </li>

                    <li><strong><span itemprop="title">Giỏ hàng</span></strong></li>

                </ul>
            </div>
        </div>
    </div>
</section>
<section class="main-cart-page main-container col1-layout">
    <div class="main container">
        <div class="wrap_background_aside padding-top-15 margin-bottom-40">
            <div class="header-cart">
                <h3><span class="count"><span class="cart-popup-count">@Model.Count</span> sản phẩm</span></h3>
            </div>
            <div class="col-main cart_desktop_page cart-page">
                <div class="cart page_cart cart_des_page hidden-xs-down">
                    <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12 pd-right cart_desktop">
                        <form asp-route="ShoppingCart" method="post" novalidate="">
                            <div class="bg-scroll">
                                <div class="cart-thead">
                                    <div class="text-left" style="width: 43%"><span>Sản phẩm<span></span></span></div>
                                    <div style="width: 19%" class="a-center"><span class="nobr">Giá</span></div>
                                    <div style="width: 13%" class="a-center">Số lượng</div>
                                    <div style="width: 25%" class="a-center">Thành tiền</div>
                                </div>
                                <div class="cart-tbody">
                                    @foreach (var item in @Model.CartDetails)
                                    {
                                        <div class="item-cart productid-@item.ProductID">
                                            <div class="content_ content_s" style="width: 15%">
                                                <a class="product-image"
                                                   asp-route="ProductDetail"
                                                   asp-route-id="@item.ProductID"
                                                   asp-route-title="@item.Title?.RemoveVietnameseAccents()">
                                                    <img width="75" height="auto" alt="@item.Title" src="@item.Avatar">
                                                </a>
                                            </div>
                                            <div class="content_ content_s" style="width: 28%">
                                                <h3 class="product-name">
                                                    <a class="text2line" title="@item.Title"
                                                       asp-route="ProductDetail"
                                                       asp-route-id="@item.ProductID"
                                                       asp-route-title="@item.Title?.RemoveVietnameseAccents()">@item.Title</a>
                                                </h3>
                                                <span class="variant-title" style="display: none;">@item.Title</span>
                                                <a class="button remove-item remove-item-cart"
                                                   title="Xoá sản phẩm" href="#"
                                                   data-id="@item.ProductID" data-url="@Url.RouteUrl("RemoveFromCart")">
                                                    <i class="fa fa-times-circle" aria-hidden="true"></i> Xóa sản phẩm
                                                </a>
                                            </div>
                                            <div style="width: 20%" class="a-center">
                                                <span class="item-price">
                                                    <span class="price bold-price">@item.Price.ToString("N0")₫</span>
                                                </span>
                                            </div>
                                            <div style="width: 15%" class="a-center">
                                                <div class="input_qty_pr">
                                                    <button class="reduced_pop items-count btn-minus" type="button">–</button>
                                                    <input type="text" maxlength="3" min="0"
                                                           class="input-text number-sidebar input_pop input_pop qtyItem"
                                                           data-productid="@item.ProductID"
                                                           name="Lines" size="4" value="@item.Quantity">
                                                    <button class="increase_pop items-count btn-plus" type="button">+</button>
                                                </div>
                                            </div>
                                            <div style="width: 22%" class="a-center">
                                                <span class="item-price cart-price">
                                                    <span class="price pink">@item.TotalPrice.ToString("N0")₫</span>
                                                </span>
                                            </div>
                                        </div>

                                    }
                                   
                                   
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-lg-4 col-md-12 col-sm-12 col-xs-12 cart-collaterals cart_submit">
                        <div class="totals">
                            <div class="total">
                                <div class="inner">
                                    <div class="wrap_checkprice">
                                        <div class="li_table shopping-cart-table-total"><span class="li-left li_text">Tổng tiền:</span><span class="li-right totals_price price">@Model.Amount.ToString("N0")₫</span></div>
                                    </div>
                                    <form asp-route="infoCustomes" id="cartInfoForm">
                                        <div>
                                            <input asp-for="@Model.FullName" class="input-control" type="text" name="FullName" placeholder="Họ tên..." />
                                        </div>
                                        <div>
                                            <input asp-for="@Model.Email" class="input-control" type="text" name="Email" placeholder="Email..." />
                                        </div>
                                        <div>
                                            <input asp-for="@Model.Mobile" class="input-control" type="text" name="Mobile" placeholder="Số điện thoại 1..." />
                                        </div>
                                        <div>
                                            <input asp-for="@Model.Address" class="input-control" type="text" name="Address" placeholder="Địa chỉ..." />
                                        </div>
                                        <div class="wrap_btn">
                                            <button id="processShoppingBtn" class="button btn-proceed-checkout" type="submit"><span>Tiến hành thanh toán</span></button>
                                        </div>
                                        <div class="btn_bottom">
                                            <button id="continueShoppingBtn" class="button btn-continue"><span>Tiếp tục mua hàng</span></button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                </div>
            </div>
        </div>
    </div>
</section>
